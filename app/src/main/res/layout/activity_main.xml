<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/barraOpciones"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
        android:id="@+id/optionView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/options" />

        <ImageView
            android:id="@+id/helpView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/help" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/saludo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/barraOpciones">

        <ImageView
            android:id="@+id/saludoview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/saludo" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/ciudad"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/saludo">

        <ImageView
            android:id="@+id/ciudadView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/clima" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/clima"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/ciudad"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/Clima1View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/clima1" />

        <ImageView
            android:id="@+id/clima2View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/clima2" />

        <ImageView
            android:id="@+id/clima3View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/clima3" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/consejos"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="40dp"
        android:layout_below="@+id/clima">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        >

            <ImageView
                android:id="@+id/consejo1View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/comando1" />

            <ImageView
                android:id="@+id/consejo2View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/comando2" />

            <ImageView
                android:id="@+id/consejoSpotifyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/comando3" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/consejos">

        <ImageView
            android:id="@+id/inicioView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/inicio" />

        <ImageView
            android:id="@+id/comunicacionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/comunicacion" />

        <ImageView
            android:id="@+id/alexaView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/alexa" />

        <ImageView
            android:id="@+id/reproducirView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/reproducir" />

        <ImageView
            android:id="@+id/dispositivosView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/dispositivo" />
    </LinearLayout>

</RelativeLayout>